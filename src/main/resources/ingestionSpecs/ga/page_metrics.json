{
  "type": "index_parallel",
  "spec": {
    "ioConfig": {
      "type": "index_parallel",
      "inputSource": {
        "type": "local",
        "filter": "PAGE_METRICS.csv",
        "baseDir": "/var/domain-intelligence/data/{{customer_id}}/{{bot_ref}}/{{load_path}}"
      },
      "inputFormat": {
        "type": "csv",
        "findColumnsFromHeader": true
      },
      "appendToExisting": true
    },
    "tuningConfig": {
      "type": "index_parallel",
      "partitionsSpec": {
        "type": "dynamic"
      },
      "logParseExceptions": true
    },
    "dataSchema": {
      "dataSource": "page_metrics_{{customer_id}}_{{bot_ref}}",
      "granularitySpec": {
        "type": "uniform",
        "queryGranularity": "DAY",
        "rollup": false,
        "segmentGranularity": "WEEK"
      },
      "timestampSpec": {
        "column": "date",
        "format": "auto"
      },
      "dimensionsSpec": {
        "dimensions": [
          {
            "type":"string",
            "name":"page_path"
          },
          {
            "type":"string",
            "name":"landing_page_path"
          },
          {
            "type": "long",
            "name": "sessions"
          },
          {
            "type":"double",
            "name":"bounce_rate"
          },
          {
            "type":"long",
            "name":"page_views"
          },
          {
            "type": "long",
            "name": "unique_page_views"
          },
          {
            "type":"long",
            "name":"time_on_page"
          },
          {
            "type":"long",
            "name":"page_load_time"
          }
        ]
      }
    }
  }
}