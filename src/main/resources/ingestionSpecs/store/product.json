{
  "type": "index_parallel",
  "spec": {
    "ioConfig": {
      "type": "index_parallel",
      "inputSource": {
        "type": "local",
        "filter": "PRODUCT.csv",
        "baseDir": "/var/domain-intelligence/data/{{customer_id}}/{{bot_ref}}/{{load_path}}"
      },
      "inputFormat": {
        "type": "csv",
        "findColumnsFromHeader": true
      },
      "appendToExisting": true
    },
    "tuningConfig": {
      "type": "index_parallel",
      "partitionsSpec": {
        "type": "dynamic",
        "maxRowsPerSegment": 5000000
      },
      "forceGuaranteedRollup": false,
      "logParseExceptions": true
    },
    "dataSchema": {
      "granularitySpec": {
        "type": "uniform",
        "queryGranularity": "DAY",
        "rollup": false,
        "segmentGranularity": "WEEK"
      },
      "timestampSpec": {
        "column": "created_at",
        "format": "auto"
      },
      "dimensionsSpec": {
        "dimensions": [
          {
            "type": "string",
            "name": "title"
          },
          {
            "type": "string",
            "name": "tags"
          },
          {
            "type": "string",
            "name": "type"
          },
          {
            "type": "string",
            "name": "variant_sku"
          },
          {
            "type": "long",
            "name": "variant_price"
          },
          {
            "type": "string",
            "name": "variant_taxable"
          },
          {
            "type": "string",
            "name": "vendor"
          },
          {
            "type": "string",
            "name": "is_gift_card"
          },
          {
            "type": "string",
            "name": "published"
          },
          {
            "type": "string",
            "name": "status"
          }
        ]
      },
      "dataSource": "product_{{customer_id}}_{{bot_ref}}"
    }
  }
}